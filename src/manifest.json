{
  "name": "Flow State",
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "description": "Prevent attention switching while doing deep work on the web",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "https://*/*"
  ],

  "manifest_version": 2,
  "browser_action": {
    "default_title": "Flow State",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "chrome_url_overrides": {
    "newtab": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["siteFilter.bundle.js"],
      "run_at": "document_end"
    }
  ]
}
